doctype html
html
  head
    meta(charset='utf-8')
    title SocketWebApp | Login Now
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='./stylesheets/layout.css', rel='stylesheet', type='text/css', media='screen')
    link(href='./stylesheets/form.css', rel='stylesheet', type='text/css', media='screen')
    link(href='./stylesheets/responsive.css', rel='stylesheet', type='text/css', media='screen')
    script(src='./javascripts/jquery-2.1.3.min.js', type='application/javascript')
    script(src='./javascripts/jquery.easing.1.3.js', type='application/javascript')
    script(src='./javascripts/menu-slider.js', type='application/javascript')
    script(src='./javascripts/ajax_login.js')
  body
    .container
      header
        a(href='/')
          img(src='./images/media/socket-app-logo.png', alt='socket-logo')
        nav
          ul
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
        .slideOut
          a(href='', title='Navigation Panel') ➜
          ul
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
      // end .header
      .content
        form#login-form(action='/login', method='GET')
          input#username.input-box(type='email', placeholder='Email ID', required='', name='username')
          br
          br
          input#password.input-box(type='password', placeholder='Password', required='', name='password')
          br
          button#submit.greengrade Sign In
          br
        div(class='signup-button')
         a(href='/register')
           button.orangegrade First Time User!
        // end .form
        a(href='#')
          img#video(src='./images/media/placeholder.jpg', alt='socket-logo')
        // end .content
      footer
        p &copy; Georgian College 2015
      // end .footer
      // end .container
