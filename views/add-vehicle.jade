doctype html
html
  head
    meta(charset='utf-8')
    title Vehicle
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/stylesheets/layout.css', rel='stylesheet', type='text/css', media='screen')
    link(href='/stylesheets/form.css', rel='stylesheet', type='text/css', media='screen')
    link(href='/stylesheets/responsive.css', rel='stylesheet', type='text/css', media='screen')
    script(src='/javascripts/jquery-2.1.3.min.js', type='application/javascript')
    script(src='/javascripts/jquery.easing.1.3.js', type='application/javascript')
    script(src='/javascripts/menu-slider.js', type='application/javascript')
    script(src='/javascripts/ajax_register.js', type='application/javascript')
  body
    .container
      header
        a(href='/dashboard')
          img(src='/images/media/socket-app-logo.png', alt='socket-logo')
        nav
          ul
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
        // Nav menu for smaller devices
        .slideOut
          a(href='', title='Navigation Panel') ➜
          ul
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
        // 
        // 
      // end .header
      .content
        section#inside-nav
          a(href='/dashboard')
            button#prof PROFILE
          a(href='/vehicle/list-vehicles')
            button#vehi VEHICLE
          a(href='/vehicle/charge')
            button#char CHARGE
          a(href='/history')
            button#hist HISTORY
        figure
          a(href='/signout')
            img#singn-out(src='https://cdn2.iconfinder.com/data/icons/picons-essentials/57/logout-512.png', width='50px', alt='sign-out-icon')
        form(id='register-form', action='/vehicle/add-vehicle', method='POST', onsubmit='return checkCheckBox(this)')
          br
          br
          br
          h3#appTitle Please enter the vehicle details below
          br
          br
          input.input-box(type='text', name='vehiclename', id='vehiclename', placeholder='Vehicle Name', required='')
          br
          br
          input.input-box(type='text', name='vehiclemodelname', id='vehiclemodelname', placeholder='Vehicle Model Name', required='')
          br
          br
          input.input-box(type='date', name='vehiclemanufacturerdate', id='vehiclemanufacturerdate', placeholder='Manufacturing Date', required='')
          br
          br
          input.input-box(type='text', name='vehicletype', id='vehicletype', placeholder='Vehicle Type', required='')
          br
          br
          input.input-box(type='text', name='vehiclelicenseno', id='vehiclelicenseno', placeholder='License Number', required='')
          br
          br
          button#submit.greengrade SAVE
          br
        a(href='/vehicle/list-vehicles')  
          button#submit.greengrade CANCEL
          br
        a(href='/vehicle/add-vehicle')
          button#submit.orangegrade ADD VEHICLE
          br
          br
          br
        // end .form
        // end .content
      footer
        p &copy; Georgian College 2015
      // end .footer
      // end .container
