doctype html
html
  head
    meta(charset='utf-8')
    title Dashboard
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='./stylesheets/layout.css', rel='stylesheet', type='text/css', media='screen')
    link(href='./stylesheets/form.css', rel='stylesheet', type='text/css', media='screen')
    link(href='./stylesheets/responsive.css', rel='stylesheet', type='text/css', media='screen')
    script(src='./javascripts/jquery.min.js', type='application/javascript')
    script(src='./javascripts/jquery-ui.min.js', type='application/javascript')
    script(src='./javascripts/jquery-2.1.3.min.js', type='application/javascript')
    script(src='./javascripts/jquery.easing.1.3.js', type='application/javascript')
  body
    .container
      header
        a(href='/dashboard')
          img(src='./images/media/socket-app-logo.png', alt='socket-logo')
        nav
          ul
            li
              a(href='/dashboard') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
        // Nav menu for smaller devices
        .slideOut
          a(href='', title='Navigation Panel') ➜
          ul
            li
              a(href='/dashboard') HOME
            li
              a(href='/about') ABOUT
            li
              a(href='/register') REGISTER
            li
              a(href='/contact') CONTACT
        // 
      // end .header
      .content
        section#inside-nav
          a(href='#')
            button#prof PROFILE
          a(href='')
            button#vehi VEHICLE
          a(href='')
            button#char CHARGE
          a(href='')
            button#hist HISTORY
        figure
          a(href='/signout')
            img#singn-out(src='https://cdn2.iconfinder.com/data/icons/picons-essentials/57/logout-512.png', width='50px', alt='sign-out-icon')
        .content
          form#update-profile(action='update-profile' method='POST')
            h4 Welcome, #{userInfo.firstName + ' ' + userInfo.lastName}
            if update=='enabled'
             br
             input.input-box(type='text', placeholder='First Name', required='', value='#{userInfo.firstName}', name='firstName')
             br
             br
             input.input-box(type='text', placeholder='Last Name', required='', value='#{userInfo.lastName}', name='lastName')
             br
             br
             input.input-box(type='email', placeholder='Email ID', required='', value='#{userInfo.username}', name='username')
             br
             br
             input.input-box(type='tel', placeholder='Phone Number', value='#{userInfo.phoneno}', name='phoneNo')
             br
             br
             input.input-box(type='text', placeholder='City', value='#{userInfo.city}', name='city')
             br
             br
             input.input-box(type='text', placeholder='Province', value='#{userInfo.province}', name='province')
             input(type='hidden', value='update', name='request')
             input(type='hidden', value='#{userInfo._id}', name='id')
             br
            else if update=='disabled'
             br
             input.input-box(type='text', placeholder='First Name', required='', disabled, value='#{userInfo.firstName}')
             br
             br
             input.input-box(type='text', placeholder='Last Name', required='', disabled, value='#{userInfo.lastName}')
             br
             br
             input.input-box(type='email', placeholder='Email ID', required='', disabled, value='#{userInfo.username}')
             br
             br
             input.input-box(type='tel', placeholder='Phone Number', disabled, value='#{userInfo.phoneno}')
             br
             br
             input.input-box(type='text', placeholder='City', disabled, value='#{userInfo.city}')
             br
             br
             input.input-box(type='text', placeholder='Province', disabled, value='#{userInfo.province}')
             input(type='hidden', value='edit', name='request')
             br
             br
            if update=='enabled'
              button.orangegrade(type='submit') UPDATE PROFILE
            else if update=='disabled'
             button.orangegrade(type='submit') EDIT PROFILE
            br
            br
            br
          // end .form
          // end .content
      footer
        p Footer
      // end .footer
      // end .container
